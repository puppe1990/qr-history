<%= form_tag(create_qr_payment_path, class: 'form-group') do %>
  <%= label_tag(:quantity, "Quantidade de QRs:") %>
  <%= text_field_tag(:quantity) %>
  <%= submit_tag("Enviar") %>
<% end %>
<% @sales.each do |sale|%>
  <%= sale.id %>
  <%= sale.price %>
  <%= sale.total %>
  <%= sale.status %>
<% end %>
