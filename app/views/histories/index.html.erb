<p id="notice"><%= notice %></p>

<h1>Histories</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Qr Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.title %></td>
        <td><%= image_tag(Link.find(history.id).short.generate_qrcode.to_img.resize(150, 150).to_data_url) %></td>
        <td><%#= link_to 'Show', history %></td>
        <td><%= link_to 'Edit', edit_history_path(history) %></td>
        <td><%#= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

